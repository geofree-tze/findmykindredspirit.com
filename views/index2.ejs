<script>

// there was a bug in the code. the 1st time a user tried to either sign up or login, it did not work.
// my guess is that the web browser had to cache a cookie the 1st time.
// my workaround was to cache a cookie on the home page when they click the sign up or login button

    document.getElementById('yes').addEventListener('submit', submitForm);
    function submitForm(e){
        e.preventDefault();

        const redirect = document.querySelector('#redirect').value;
      
        fetch('/', {
            method:'POST',
            headers: {
                'Accept': 'application/json, text/plain, */*',
                'Content-type':'application/json'
            },
            body:JSON.stringify({redirect: redirect})
        })
        .then((res) => res.json())
        .then((data) => {
                document.location.replace('https://<%= domainName %>/email');
        });
    }
