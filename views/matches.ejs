<% include ../views/partials/header %>
<style>
.shadow {
	-webkit-box-shadow: 0 8px 6px -6px black;
	   -moz-box-shadow: 0 8px 6px -6px black;
	        box-shadow: 0 8px 6px -6px black;
}
</style>

    </head>
    <body style="background-color:#884488;">          

    <div class="container">
        <%- messages('message', locals) %>



<div class="row">
	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">

			<div class="row" style="text-align:center;">
				<div class="col-xs-3" style="background-color:#44ffff;"><br><a href="/weights" style="color:black;"><span style="font-size:10px;">Weights</span><br><i class="fas fa-balance-scale-right"></i></a><br><br></div>
				<div class="col-xs-3" style="background-color:white;"><br><a href="/commonalities" style="color:black;"><span style="font-size:10px;">Commonalities</span><br><i class="fas fa-people-arrows"></i></a><br><br></div>
				<div class="col-xs-3">
					<div class="row" style="text-align:center;">
						<div class="col-xs-4" style="background-color:#ff44ff;opacity:0.35;"><br><br><br><br></div>
						<div class="col-xs-8" style="background-color:#884488;"><br><br><br><br></div>
					</div>
				</div>
				<div class="col-xs-3" style="background-color:gray;"><br><a href="/logout" style="color:black;"><span style="font-size:10px;">Logout</span><br><i class="fas fa-sign-out-alt"></i></a><br><br></div>
			</div>

			<div class="row" style="text-align:center;">
				<div class="col-xs-7 shadow" style="background-color:#ff44ff;opacity:0.35;"><br><a href="/tinder" style="color:black;"><b>Swipe</b><br><i class="far fa-hand-point-right"></i> <span style="font-size:10px;"><%= friendsToBe %></span></a><br><br></div>
				<div class="col-xs-5 shadow" style="background-color:#884488;"><br><a href="/matches" style="color:black;">Matches<br><i class="fas fa-user-friends"></i> <span style="font-size:10px;"><%= kindred.length %></span></a><br><br></div>
			</div>





<% if (kindred.length > 0) { %>
<div id="text-carousel" class="carousel" style="background-color:#ffffff;margin:15px;" data-interval="false">
    <!-- Wrapper for slides -->
    <div class="row">
        <div class="col-xs-offset-2 col-xs-8">
            <div class="carousel-inner" style="text-align:center;">

		<% var j = 1; %>
                <% kindred.forEach(function(user) { %>

                <div class="item <% if (j == 1) { %>active<% } %>">
                    <div class="carousel-content">
				<br>
				<br>

				<span style="font-size:42px;">
					<i class="fas fa-user-alt"></i>
				</span>

				<br>

				<span style="font-size:14px;">
					match <%= j++ %> of <%= kindred.length %>
				</span>

				<br>
					<label for="matchEmail">Email: </label>
					<input style="width:67%;" type="text" id="matchEmail" value="<%= user.email %>">

<!--
				<br>

				<span style="font-size:12px;">
					affinity score: <%= user.weightSum %> pts
				</span>
-->
				<br>
				<br>

				<div style="font-size:12px;text-align:left;">
				<% user.tags.sort((a, b) => b[1] - a[1]); %>
                	        <% user.tags.forEach(function(tag) { %>
					<i class="far fa-comments"></i> You both said, 
					<br>
					&nbsp;&nbsp;&nbsp;&nbsp; 
					<span style="font-size:10px;">&ldquo;<%= tag[0] %>&rdquo;</span><br>
					&nbsp;&nbsp;&nbsp;&nbsp;
						<span style="font-size:8px;">
							You weighted it <%= tag[1] %>pt<% if(Math.abs(tag[1]) != 1){%>s<%}%>.
							They weighted it <%= tag[2] %>pt<% if(Math.abs(tag[2]) != 1){%>s<%}%>
						</span><br>
				    </tr>
        	                <% }); %>
				</div>

				<br>
                    </div>
                </div>

                <% }); %>
		<br>
		<br>
	    </div>
	</div>
    </div>
<% } %>
<% if (kindred.length > 1) { %>
    <!-- Controls --> 

 <a class="left carousel-control" style="background-color:gray;" href="#text-carousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span style="font-size:14px;">back</span>
  </a>

 <a class="right carousel-control" style="background-color:gray;" href="#text-carousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span style="font-size:14px;">next</span>
  </a>
<% } %>
<% if (kindred.length > 0) { %>
</div>
<% } %>


<% if (kindred.length == 0) { %>
<div id="text-carousel" class="carousel" style="background-color:#ffffff;margin:15px;" data-interval="false">
    <!-- Wrapper for slides -->
    <div class="row">
        <div class="col-xs-offset-2 col-xs-8">
            <div class="carousel-inner" style="text-align:center;">

                <div class="item active">
                    <div class="carousel-content">
				<br>

				<h3>No matches yet.</h3>
				<br>
				You'll get an email notification when they swipe right on you.
				<br>
				<br>
                    </div>
                </div>

		<br>
		<br>
	    </div>
	</div>
    </div>
</div>
<% } %>


		</div>
	</div>

<% include ../views/partials/footer %>

